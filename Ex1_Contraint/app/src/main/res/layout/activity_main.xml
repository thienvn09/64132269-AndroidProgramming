<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257"
        app:srcCompat="@android:drawable/btn_star_big_on" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Singapore"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <TextView
        android:id="@+id/cameraLabel"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="Camera:"
        android:textStyle="bold"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="374dp"
        android:layout_height="106dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="Singapore officially the Republic of Singapore, and often referred to as the Lion City..."
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="8dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="397dp" />


    <!-- NÃºt Upload -->

    <TextView
        android:id="@+id/cameraType"
        android:layout_width="114dp"
        android:layout_height="33dp"
        android:text="Leica M Typ 240"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="259dp" />

    <TextView
        android:id="@+id/settingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:text="Settings:"
        android:textStyle="bold"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraLabel" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="f/4 16s ISO 200"
        app:layout_constraintMarginStart="8dp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="336dp" />

    <Button
        android:id="@+id/discard"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:text="DISCARD"
        app:layout_constraintMarginEnd="8dp"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="16dp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="623dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:text="UPLOAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintMarginTop="16dp"
        tools:layout_editor_absoluteY="620dp" />

</androidx.constraintlayout.widget.ConstraintLayout>