<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Màu khi chấm được chọn -->
            <corners android:radius="4dp" /> <!-- Bo góc nhỏ hơn -->
            <size android:width="8dp" android:height="2dp" /> <!-- Kích thước nhỏ hơn -->
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Màu khi chấm không được chọn -->
            <corners android:radius="4dp" /> <!-- Bo góc nhỏ hơn -->
            <size android:width="8dp" android:height="2dp" /> <!-- Kích thước nhỏ hơn -->
        </shape>
    </item>
</selector>