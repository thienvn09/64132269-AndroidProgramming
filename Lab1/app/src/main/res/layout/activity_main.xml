<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Máy tính đơn giản"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Số A -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số A:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginStart="32dp"
        app:layout_constraintTop_margin="32dp" />

    <EditText
        android:id="@+id/Txt_SoA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView2"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginStart="16dp" />

    <!-- Số B -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số B:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/Txt_SoA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginStart="32dp"
        app:layout_constraintTop_margin="16dp" />

    <EditText
        android:id="@+id/Txt_SoB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView3"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginStart="16dp" />

    <!-- Nút tính toán -->
    <Button
        android:id="@+id/btn_KQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính kết quả"
        app:layout_constraintTop_toBottomOf="@id/Txt_SoB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="32dp" />

    <!-- Kết quả -->
    <TextView
        android:id="@+id/txt_KQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kết quả: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/btn_KQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
