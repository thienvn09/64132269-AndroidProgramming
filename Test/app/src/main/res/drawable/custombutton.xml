<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40E0D0" /> <!-- Màu nền -->
            <corners android:radius="35dp" /> <!-- Bo tròn góc -->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6F61" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="35dp" /> <!-- Bo tròn góc -->
        </shape>
    </item>
</selector>