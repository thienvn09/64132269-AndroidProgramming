<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgphepcong"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtThongBao"
        android:layout_width="415dp"
        android:layout_height="45dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="43dp"
        android:background="@color/title_color"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@color/title_color"
        android:fontFamily="@font/fredoka_one"
        android:paddingTop="15dp"
        android:text="Gia sư toán học"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title">

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="412dp"
        android:layout_height="231dp"
        android:backgroundTint="@color/card2"
        android:padding="25dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:gravity="center"
            android:padding="8dp"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="6" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/MauNut"
                android:fontFamily="@font/fredoka_one"
                android:text="9" />

        </GridLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="287dp"
        android:background="@color/title_color"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputA"
                android:layout_width="64dp"
                android:layout_height="75dp"
                android:ems="10"
                android:fontFamily="@font/fredoka_one"
                android:inputType="number"
                android:text="A"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="47dp"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="+"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/InputB"
                android:layout_width="64dp"
                android:layout_height="75dp"
                android:ems="10"
                android:fontFamily="@font/fredoka_one"
                android:inputType="number"
                android:text="B"
                android:textAlignment="center" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtOutPut"
            android:layout_width="207dp"
            android:layout_height="66dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:inputType="text" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/nutkt"
            android:fontFamily="@font/fredoka_one"
            android:text="KT Ket Qua" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
